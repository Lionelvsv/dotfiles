Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa

Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_rsa

Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_rsa



Host heroku.com
  HostName heroku.com
  IdentityFile ~/.ssh/id_rsa_vishal_wagstays
  IdentitiesOnly yes

